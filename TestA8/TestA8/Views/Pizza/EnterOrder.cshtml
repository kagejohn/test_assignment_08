@model TestA8.Models.Order

@{
    ViewData["Title"] = "Enter order";
}

<h2>Enter order</h2>

<h4>Order</h4>
<hr />

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-md-4">
            <form asp-action="EnterOrder">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Pizza" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Pizza, ViewBag.Menu as SelectList, new { @class = "form-control" })
                    <span asp-validation-for="Pizza" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PickupTime" class="control-label"></label>
                    <input asp-for="PickupTime" class="form-control" type="time" />
                    <span asp-validation-for="PickupTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                    @if (ViewBag.Success != null && ViewBag.Success)
                    {
                        <label>Success: </label> <span id="Success">@ViewBag.Success</span>
                    }
                </div>
            </form>
        </div>
    </div>

}

<div>
    <a asp-action="Menu">Back to Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
